{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "build",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
  ]
}