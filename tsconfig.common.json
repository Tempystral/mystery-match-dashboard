{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "build/shared",
    "composite": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "./src/shared/**/*.ts"
  ]
}